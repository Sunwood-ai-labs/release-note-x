# X (Twitter) API Credentials
# Get your keys from: https://developer.x.com/en/portal/dashboard

X_API_KEY=your_api_key_here
X_API_SECRET=your_api_secret_here
X_ACCESS_TOKEN=your_access_token_here
X_ACCESS_SECRET=your_access_secret_here
X_BEARER_TOKEN=your_bearer_token_here

# Optional: Target community ID (for community-specific posts)
X_COMMUNITY_ID=your_community_id_here

# Discord Webhook URL
# Get your webhook from: Discord Server Settings → Integrations → Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/123456789/abcdefghij

# ============================================================================
# AI Provider Configuration
# ============================================================================

# Option 1: OpenAI (Official)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Option 2: OpenRouter (Supports free models!)
# Get your key from: https://openrouter.ai/keys
# OPENROUTER_API_KEY=sk-or-your-openrouter-api-key-here
# OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
# OPENROUTER_MODEL=google/gemma-7b-it:free

# Available Free Models on OpenRouter:
# - google/gemma-7b-it:free
# - mistralai/mistral-7b-instruct:free
# - gryphe/mythomax-l2-13b:free
# See more at: https://openrouter.ai/models?order=newest&free=true

# Optional: Language preference for summarization (default: auto)
# Options: auto, ja, en
SUMMARY_LANGUAGE=auto
